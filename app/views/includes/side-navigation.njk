<div class="govuk-grid-column-one-third navigation--pad-bottom">
    <nav role="navigation" class="settings-navigation">
        <ul class="govuk-list govuk-!-margin-bottom-9">
          {% for item in adminNavigationItems %}
            {% if item.permissions %}
              {% if item.current %}
                <li class="govuk-!-font-weight-bold  govuk-!-margin-bottom-2">
                  <a class="govuk-link govuk-link--no-visited-state govuk-link--no-underline" id="{{item.id}}" href="{{item.url}}">{{item.name}}</a>

                  {% if currentService.experimentalFeaturesEnabled and currentGatewayAccount.type === "live" and item.id === "navigation-menu-your-psp" %}
                    <strong class="govuk-tag govuk-tag--green">active</strong>
                  {% endif %}
                </li>
              {% else %}
                <li class="govuk-!-margin-bottom-2">
                  <a class="govuk-link govuk-link--no-visited-state govuk-link--no-underline" id="{{item.id}}" href="{{item.url}}">{{item.name}}</a>

                  {% if currentService.experimentalFeaturesEnabled and currentGatewayAccount.type === "live" and item.id === "navigation-menu-your-psp" %}
                    <strong class="govuk-tag govuk-tag--green">active</strong>
                  {% endif %}
                </li>
              {% endif %}
            {% endif %}
          {% endfor %}
        </ul>
    </nav>
</div>
