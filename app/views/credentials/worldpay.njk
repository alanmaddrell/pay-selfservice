{% extends "./index.njk" %}

{% block provider_content %}
  {% if permissions.gateway_credentials_update %}
    <form id="credentials-form" method="post" action="{{ formatAccountPathsFor(routes.account.credentials.index, currentGatewayAccount.external_id, 'worldpay') }}" autocomplete="off">
      <input id="csrf" name="csrfToken" type="hidden" value="{{csrf}}" />

      {% if change === 'merchantId' %}
        {{ govukInput({
            label: {
              text: "Merchant code"
            },
            id: "merchantId",
            name: "merchantId",
            classes: "govuk-input--width-20",
            type: "text",
            attributes: {
              "data-validate": "required",
              "autocomplete": "off"
            },
            value: currentGatewayAccount.credentials.merchant_id
          })
        }}
      {% else %}
        {{ govukInput({
            label: {
              text: "Merchant code"
            },
            id: "merchantId",
            name: "merchantId",
            classes: "govuk-input--width-20",
            type: "text",
            attributes: {
              "autocomplete": "off"
            },
            value: currentGatewayAccount.credentials.merchant_id
          })
        }}
      {% endif %}

      {% if change === 'username' %}
        {{ govukInput({
            label: {
              text: "Username"
            },
            id: "username",
            name: "username",
            classes: "govuk-input--width-20",
            type: "text",
            attributes: {
              "autocomplete": "off"
            },
            value: currentGatewayAccount.credentials.username
          })
        }}
      {% else %}
        {{ govukInput({
            label: {
              text: "Username"
            },
            id: "username",
            name: "username",
            classes: "govuk-input--width-20",
            type: "text",
            attributes: {
              "data-validate": "required",
              "autocomplete": "off"
            },
            value: currentGatewayAccount.credentials.username
          })
        }}
      {% endif %}

      {% if change === 'password' %}
        {{ govukInput({
            label: {
              text: "Password"
            },
            id: "password",
            name: "password",
            classes: "govuk-input--width-20",
            type: "new-password",
            attributes: {
              "readonly": true,
              "on-focus": "this.removeAttribute(\'readonly\');",
              "data-validate": "required",
              "autocomplete": "new-password"
            }
          })
        }}
        {% else %}
        {{ govukInput({
            label: {
              text: "Password"
            },
            id: "password",
            name: "password",
            classes: "govuk-input--width-20",
            type: "password",
            attributes: {
              "data-validate": "required",
              "autocomplete": "new-password"
            }
          })
        }}
      {% endif %}

      {{
        govukButton({
          text: "Save credentials",
          attributes: {
            id: "submitCredentials"
          }
        })
      }}
    </form>

    <script>
      setTimeout(() => {
        document.querySelectorAll('form').forEach(form => form.autocomplete = "off")
        document.querySelectorAll('form').forEach(form => form.reset())
      }, 0)
    </script>
  {% endif %}
{% endblock %}
